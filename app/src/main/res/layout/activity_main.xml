<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_1_1"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#ff00ff"
        app:layout_constraintEnd_toStartOf="@+id/view_1_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_1_2"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#ffff00"
        app:layout_constraintEnd_toStartOf="@+id/view_1_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_1_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_1_3"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#00ffff"
        app:layout_constraintEnd_toStartOf="@+id/view_1_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_1_2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_1_4"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#f0f0ff"
        app:layout_constraintEnd_toStartOf="@+id/view_1_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_1_3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_1_5"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#0f0fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_1_4"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Group
        android:id="@+id/group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="view_1_1,view_1_2,view_1_3,view_1_4,view_1_5" />

    <View
        android:id="@+id/view_2_1"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#00f0ff"
        app:layout_constraintEnd_toStartOf="@+id/view_2_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1_1" />

    <View
        android:id="@+id/view_2_2"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#ff00ff"
        app:layout_constraintEnd_toStartOf="@+id/view_2_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_2_1"
        app:layout_constraintTop_toBottomOf="@+id/view_1_2" />

    <View
        android:id="@+id/view_2_3"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#ff0000"
        app:layout_constraintEnd_toStartOf="@+id/view_2_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_2_2"
        app:layout_constraintTop_toBottomOf="@+id/view_1_3" />

    <View
        android:id="@+id/view_2_4"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#000f00"
        app:layout_constraintEnd_toStartOf="@+id/view_2_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_2_3"
        app:layout_constraintTop_toBottomOf="@+id/view_1_4" />

    <View
        android:id="@+id/view_2_5"
        style="@style/DefaultRectangleView"
        android:layout_marginTop="8dp"
        android:background="#0ff00f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_2_4"
        app:layout_constraintTop_toBottomOf="@id/view_1_5" />


    <android.support.constraint.Group
        android:id="@+id/group_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="view_2_1,view_2_2,view_2_3,view_2_4,view_2_5" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="group 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="group 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>